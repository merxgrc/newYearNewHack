<Label>:
    canvas.before:
        Color:
            rgba: .6, .6, .6, 1
        Rectangle:
            size: self.size
            pos: self.pos


<DarkLabel>:
    color: (1, 1, 1, 1)
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            size: self.size
            pos: self.pos

<DarkerLabel>:
    color: (1, 1, 1, 1)
    canvas.before:
        Color:
            rgba: .55, .55, .55, 1
        Rectangle:
            size: self.size
            pos: self.pos