<Label>:
    canvas.before:
        Color:
            rgba: .61, .61, .61, 1
        Rectangle:
            size: self.size
            pos: self.pos


<DarkLabel>:
    color: (1, 1, 1, 1)
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            size: self.size
            pos: self.pos
